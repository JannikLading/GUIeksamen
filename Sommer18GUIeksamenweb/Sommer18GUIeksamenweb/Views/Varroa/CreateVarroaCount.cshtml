@model Sommer18GUIeksamenweb.Models.VarroaCount

@{
        ViewData["Title"] = "Create";
}

<h1>Create new Varroa Count</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BeeHiveName"></label>
                <input asp-for="BeeHiveName" class="form-control" />
                <span asp-validation-for="BeeHiveName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfVarroa"></label>
                <input asp-for="AmountOfVarroa" class="form-control" />
                <span asp-validation-for="AmountOfVarroa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservedDays"></label>
                <input asp-for="ObservedDays" class="form-control" />
                <span asp-validation-for="ObservedDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Add Count</button>

        </form>
    </div>
</div>

